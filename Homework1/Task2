package com.epam;

public class Task2 {

    public static void main(String[] args) {
        double weightInPounds = 8.9;
        final float gramPerPound = 453.6f;
        double weightInKilogramsGrams = weightInPounds / 1_000 * gramPerPound;
        long weightKilograms = (long) (weightInPounds / 1_000 * gramPerPound);
        double weightGrams = weightInKilogramsGrams - weightKilograms;
        System.out.println("In "+weightInPounds+" pounds, "+weightKilograms+" kilograms and "+
                (int) (weightGrams * 1_000)+" grams.");
    }
}
